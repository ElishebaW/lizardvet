
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<nav><%=render "layouts/nav" %></nav>


<header>  <%= render "layouts/header" %></header>
<body>
  <h3>Here is a listing of our veterinarians</h3>
    <table>
      <thead>
        <tr>
          <th>Photo</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Years in practice</th>
          <th>Vet university</th>
        </tr>
      </thead>
  <tbody>
    <% @veterinarians.each do |veterinarian| %>
      <tr>
        <td><%= veterinarian.avatar.thumb.url%></td>
        <td><%= veterinarian.first_name %></td>
        <td><%= veterinarian.last_name %></td>
        <td><%= veterinarian.years_in_practice %></td>
        <td><%= veterinarian.vet_university %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', veterinarian %></td>
        <td><%= link_to 'Edit', edit_veterinarian_path(veterinarian) %></td>
        <td><%= link_to 'Destroy', veterinarian, method: :delete, data: { confirm: 'Are you sure?'}%></td>
        <% end %>
    <% end %>
  </tbody>
</table>
</body>
<footer><%= render "layouts/footer" %></footer>
