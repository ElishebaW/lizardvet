<div class='main'>
  <h1>Practice Performance Analytics</h1>
  <%= render 'lizards/sidebar' %>
  <h2>Getting Pets in for visits</h2>
  <div class='chart'>
  <%= area_chart @lizards.group_by_month(:last_seen).count %>
  </div>


  <h2>Avg Social Score</h2>
  <div class='chart'>
  <%= line_chart Lizard.group(:social_score).count %>
  </div>


  <h2>Avg Diet Score</h2>
  <div class='chart'>
  <%= bar_chart @lizards.group(:diet_score).count %>
  </div>


  <h2>Avg Fitness Score</h2>
  <div class='chart'>
  <%= pie_chart @lizards.group(:fitness_score).count %>
  </div>

  <h2>Avg Mental Score</h2>
  <div class='chart'>
  <%= column_chart @lizards.group(:mental_score).count %>
  </div>
</div>
