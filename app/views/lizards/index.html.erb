<p id="notice"><%= notice %></p>

<h1>Listing Lizards</h1>

<table>
  <thead>
    <tr>
      <th>Petname</th>
      <th>Weight</th>
      <th>Length</th>
      <th>Last seen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lizards.each do |lizard| %>
      <tr>
        <td><%= lizard.petname %></td>
        <td><%= lizard.weight %></td>
        <td><%= lizard.length %></td>
        <td><%= lizard.last_seen %></td>
        <td><%= link_to 'Show', lizard %></td>
        <td><%= link_to 'Edit', edit_lizard_path(lizard) %></td>
        <td><%= link_to 'Destroy', lizard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

